                        li
                            img(src='../static/images/dropdown/settings.png')
                            a(href='#') Settings
                        li
                            img(src='../static/images/dropdown/help.png')
                            a(href='#') Help
                        li
                            img(src='../static/images/dropdown/logout.png')
                            a(href='#') Logout