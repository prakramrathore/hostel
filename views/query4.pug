extends base.pug

block scripts 
    script(src='../static/js/dropdown.js')

block style
    style 
        include ..\static\style.css
        include ..\static\styles\dropdown.css

block content 
    section.home-section 
        nav 
            .sidebar-button 
                span.dashboard Query4
            .search-box 
                input(type="text", placeholder="Search...")
                i.bx.bx-search 
            .profile-details(onclick="menuToggle()")
                img(src=`../static/images/profile.jpg`, alt="")
                span.admin_name Prakram Rathore
                i.bx.bx-chevron-down 
            .action
                .menu
                    h3
                        | Someone Famous
                        br
                        span Website Designer
                    ul
                        li
                            img(src='../static/images/dropdown/profile.png')
